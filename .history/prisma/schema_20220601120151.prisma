// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spawn {
  id String @id @default(uuid())
  owner_id String
  birth_date Int
  chain String
  class String
  name String
  breed_count Int
  figures String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token_id Int
  price Float
  delete_count Int
}

model User {
  id String @id @unique @default(uuid())
  username String
  email String
  password String
  isActive Boolean
  image String
  isVerified Boolean
}


model SpawnSkill {
    id Int
    spawnId ID
    skill1 ID
    skill2 ID
    skill3 ID
}

type SpawnAddress {
    id Int @id @default(autoincrement())
    spawnId String
    metadata String
    imageAtlas String
    atlas String  
    imageAddress String
}

type Skill {
    id ID
    imageAddress String
    metaDataAddress String
}

type SpawnParts {
    id ID
    name String
    imageAddress String
    class String
    level Int
}

type BattleInfo {
    spawnId String 
    level Int
    battlesWon Int
}